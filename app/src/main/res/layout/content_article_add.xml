<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_article_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hopearena.autoreading.ArticleAddActivity"
    tools:showIn="@layout/activity_article_add">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:ems="10"
        android:id="@+id/add_content"
        android:hint="@string/add_content"
        android:layout_above="@+id/play_button"
        android:background="@drawable/add_content_textview_border"
        android:padding="3dp" />

    <Button
        android:text="@string/play_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/play_button"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:text="@string/pause_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/pause_button"/>
</RelativeLayout>
